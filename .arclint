{
  "exclude": [
    "(^server/_build/)",
    "(^server/deps/)",
    "(^client/_build/)",
    "(^client/elm-stuff/)",
    "(^client/node_modules/)",
    "(^server/support/arcanist/arcanist-elixir-support/)",
    "(^server/rel/releases/)"
  ],
  "linters": {
    "chmod": {
      "type": "chmod"
    },
    "elixir": {
      "type": "elixirdogma",
      "elixirdogma.project-root-dir": "server",
      "include": "(\\.ex[s]?$)"
    },
    "filename": {
      "type": "filename"
    },
    "generated": {
      "type": "generated"
    },
    "json": {
      "type": "json",
      "include": [
        "(^\\.arcconfig$)",
        "(^\\.arclint$)",
        "(\\.json$)"
      ]
    },
    "merge-conflict": {
      "type": "merge-conflict"
    },
    "nolint": {
      "type": "nolint"
    },
    "spelling": {
      "type": "spelling"
    },
    "text-without-length": {
      "type": "text",
      "exclude": [
        "(^\\.gitmodules$)",
        "(makefile$)"
      ],
      "severity": {
        "3": "disabled"
      }
    },
    "text-without-length-or-tabs": {
      "type": "text",
      "include": [
        "(^\\.gitmodules$)",
        "(makefile$)"
      ],
      "severity": {
        "2": "disabled",
        "3": "disabled"
      }
    }
  }
}
